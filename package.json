{
  "name": "valdex",
  "version": "1.0.3",
  "description": "Runtime type validation with TypeScript type inference",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:types": "tsd",
    "test:all": "npm test && npm run test:types"
  },
  "tsd": {
    "directory": "src",
    "typingsFile": "src/index.ts"
  },
  "keywords": [
    "typescript",
    "validation",
    "runtime",
    "type-inference",
    "schema",
    "validator"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsd": "^0.33.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asheswook/valdex.git"
  },
  "bugs": {
    "url": "https://github.com/asheswook/valdex/issues"
  },
  "homepage": "https://github.com/asheswook/valdex#readme"
}
